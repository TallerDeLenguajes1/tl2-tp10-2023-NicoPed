@{
    ViewData["Title"] = "Tarea";
}

@model tl2_tp10_2023_NicoPed.ViewModels.ListarTareasDeTableroViewModel

<h2>Tareas</h2>

@if(Model.Tareas.Count == 0){
    <h2>Este tablero NO tiene tareas</h2>
}else{
    <table class="table table-green">
    <thead>
        <tr>
            <th hidden>id_tarea</th>
            <th>nombre</th>
            <th>estado</th>
            <th>descripcion</th>
            <th>color</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model.Tareas)
        {
            <tr>
                <td  hidden>@tarea.Id_tarea</td>
                <td>@tarea.Nombre</td>
                <td>@tarea.Estado</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.Color</td>
                @if(Model.EsPropietario){
                <td>
                    <a asp-controller="Tarea" asp-action="EditarTarea" asp-route-idTarea="@tarea.Id_tarea">Editar

                    </a>
                    <a asp-controller="Tarea" asp-action="DeleteTarea" asp-route-idTarea="@tarea.Id_tarea" onclick="return confirm('Â¿Estas seguro que quieres eliminar esta Tarea?')">Eliminar

                    </a>                      
                </td>
                }else{
                    <td>
                        <form asp-controller="Tarea" asp-action="ActualizarEstado" method="post">
                            <select name="estadoNuevo" asp-items = "@Html.GetEnumSelectList<tl2_tp10_2023_NicoPed.Tarea.estadoTarea>()">
                            </select>
                            <input hidden name="idTarea" value="@tarea.Id_tarea">
                            <input type="submit" value="Cambiar">
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
}
<div class="d-grid gap-2 col-6 mx-auto">
    <a class="btn btn-outline-primary" asp-area="" asp-route-idTablero = "@Model.IdTablero" asp-controller="Tarea" asp-action="CrearTarea" >Crear Tarea</a> 
    <a class="btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Index" >Ir al inicio</a> 
</div>