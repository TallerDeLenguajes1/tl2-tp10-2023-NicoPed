
@model tl2_tp10_2023_NicoPed.ViewModels.EditarTareaViewModel;
@section Scripts{<partial name="_ValidationScriptsPartial"/>}

<form asp-controller="Tarea" asp-action="EditarTarea">
    <input hidden asp-for="@Model.Id_tarea">
    <input hidden asp-for="@Model.Id_tablero">
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input value= "@Model.Nombre" asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado"></label>
        <select asp-for="@Model.Estado" value="@Model.Estado" class="form-select" asp-items="@Html.GetEnumSelectList<tl2_tp10_2023_NicoPed.Tarea.estadoTarea>()">
        <span asp-validation-for="@Model.Estado" class="text-danger"></span>

        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input value= "@Model.Descripcion" asp-for="@Model.Descripcion" class="form-control" />
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
    
    </div>
    <div class="form-group">
        <label asp-for="@Model.Color"></label>
        <input  value= "@Model.Color" asp-for="@Model.Color" class="form-control" />
        <span asp-validation-for="@Model.Color" class="text-danger"></span>
    
    </div>
    <div class="form-group">
        <label asp-for="@Model.Id_usuario_asignado"></label>
        <select value= "@Model.Id_usuario_asignado" asp-for="@Model.Id_usuario_asignado" class="form-select">
            <option value="-999">No Asignar</option>
            @foreach(var usuario in Model.Usuarios){
                <option value="@usuario.Id_usuario">@usuario.Nombre_de_usuario</option>
            }
        </select>
        <span asp-validation-for="@Model.Id_usuario_asignado" class="text-danger"></span>

    </div>    
    <button class="btn btn-outline-primary" type="submit">Enviar</button>
</form>