@{ 
    ViewData["Title"] = "Crear Usuario";
}
@section Scripts{<partial name="_ValidationScriptsPartial"/>}

@model tl2_tp10_2023_NicoPed.ViewModels.CrearUsuarioViewModel

<h1>@ViewData["Title"]</h1>
<section class="centrado"> 

<form asp-controller="Usuario" asp-action="CrearUsuario">
    <div class="form-group">
        <label asp-for="@Model.Nombre_de_usuario"></label>
        <input asp-for="@Model.Nombre_de_usuario" class="form-control" />
        <span asp-validation-for="@Model.Nombre_de_usuario" class="text-danger"></span>
    
    </div>
        <div class="form-group">
        <label asp-for="@Model.Contrasenia"></label>
        <input type="password" asp-for="@Model.Contrasenia" class="form-control" />
        <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.RolUsuario"></label>
        <select asp-for="@Model.RolUsuario" class="form-select" asp-items="@Html.GetEnumSelectList<tl2_tp10_2023_NicoPed.Rol>()">
            
        </select>
        <span asp-validation-for="@Model.RolUsuario" class="text-danger"></span>
    </div>
    <div class="centrado">
        <button class="btn btn-outline-primary" type="submit">Enviar</button>
    </div>
</form>

</section>