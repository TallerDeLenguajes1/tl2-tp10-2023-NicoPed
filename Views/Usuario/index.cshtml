@{
    ViewData["Title"] = "Home Page";
}

@model List<Usuario>

<h2>Lista De Usuario</h2>

<table class="table table-green">
    <thead>
        <tr>
            <th>id_usuario</th>
            <th>nombre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Id_usuario</td>
                <td>@usuario.Nombre_de_usuario</td>
                <td>
                    <a asp-controller="Usuario" asp-action="EditarUsuario" asp-route-idUsuario="@usuario.Id_usuario">Editar</a>
                    <a asp-controller="Usuario" asp-action="DeleteUsuario" asp-route-idUsuario="@usuario.Id_usuario" onclick="return confirm('Â¿Estas seguro que quieres eliminar el usuario?')">Eliminar</a>                      
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-grid gap-2 col-6 mx-auto">
    <a class="btn btn-outline-primary" asp-area="" asp-controller="Usuario" asp-action="CrearUsuario" >Crear Usuario</a> 
    <a class="btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Index" >Ir al inicio</a> 
</div>