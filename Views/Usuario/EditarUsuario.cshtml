@{ 
    ViewData["Title"] = "Editar Usuario";
}


@model tl2_tp10_2023_NicoPed.ViewModels.EditarUsuarioViewModel
@section Scripts{<partial name="_ValidationScriptsPartial"/>}
<section class="centrado"> 

<form asp-controller="Usuario" asp-action="EditarUsuario" autocomplete="off" method="post">
    <input hidden asp-for="@Model.Id_usuario">
    <div class="form-group">
        <label asp-for="@Model.Nombre_de_usuario"></label>
        <input asp-for="@Model.Nombre_de_usuario" class="form-control" />
        <span asp-validation-for="@Model.Nombre_de_usuario" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="@Model.Contrasenia"></label>
        <input asp-for="@Model.Contrasenia" type="password" class="form-control" />
        <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.RolUsuario"></label>
        @if (Context.Session.GetString("id") == (Model.Id_usuario).ToString()){   
            <select disabled asp-for="@Model.RolUsuario" value="@Model.RolUsuario" class="form-select" asp-items="@Html.GetEnumSelectList<tl2_tp10_2023_NicoPed.Rol>()">
            </select>
        }else{

            <select asp-for="@Model.RolUsuario" value="@Model.RolUsuario" class="form-select" asp-items="@Html.GetEnumSelectList<tl2_tp10_2023_NicoPed.Rol>()">
            </select>
        }
        <span asp-validation-for="@Model.RolUsuario" class="text-danger"></span>
    </div>
    <div class="centrado">

        <button class="btn btn-outline-success" type="submit">Enviar</button>
    </div>    
</form>
</section>