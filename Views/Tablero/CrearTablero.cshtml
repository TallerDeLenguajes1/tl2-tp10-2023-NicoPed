@{ 
    ViewData["Title"] = "Crear Tablero";
}

@model tl2_tp10_2023_NicoPed.ViewModels.CrearTableroViewModel
@section Scripts{<partial name="_ValidationScriptsPartial"/>}

<h1>@ViewData["Title"]</h1>
<section class="centrado"> 

<form asp-controller="Tablero" asp-action="CrearTablero">
    <div class="form-group">
        <label asp-for="@Model.NombreUsuarioPropietario">Usuario Propietario</label>
        <input asp-for="@Model.NombreUsuarioPropietario" disabled class="form-control" />
    
    </div>
        <input hidden asp-for="@Model.Id_usuario_propietario" value="@Model.IdUsuarioPropietario">
        <input hidden asp-for="@Model.NombreUsuarioPropietario" >
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" />
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
    
    </div>
    <div class="centrado">
        <button class="btn btn-outline-primary" type="submit">Enviar</button>
    </div>
</form>

</section>