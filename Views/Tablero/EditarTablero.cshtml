
@model Tablero

<form asp-controller="Tablero" asp-action="EditarTablero">
    <input hidden asp-for="@Model.Id_tablero">
    <div class="form-group">
        <label asp-for="@Model.Id_usuario_propietario"></label>
        <input asp-for="@Model.Id_usuario_propietario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>
    <button class="btn btn-outline-primary" type="submit">Enviar</button>
</form>