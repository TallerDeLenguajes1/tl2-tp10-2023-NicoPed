@model tl2_tp10_2023_NicoPed.ViewModels.LoginViewModel
@section Scripts{<partial name="_ValidationScriptsPartial"/>}

<h1 class="text-center">Kanban</h1>
<section>
    <form asp-controller="Login" asp-action="Login" method = "post" class="form-logger">
        <section class="mb-3">
            <label asp-for="@Model.NombreUsuario" class="form-label"></label>
            <input asp-for="@Model.NombreUsuario" class="form-control">
        </section>
        <section class="mb-3">
            <label asp-for="@Model.ContraseniaUsuario" class="form-label"></label>
            <input asp-for="@Model.ContraseniaUsuario" type="password" class="form-control">
        </section>
        <input type="submit" value="Entrar" class="btn btn-outline-info">
    </form>
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }